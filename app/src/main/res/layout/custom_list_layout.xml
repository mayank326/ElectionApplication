<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/customListBoothImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:focusable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/booth"/>

            <TextView
                android:id="@+id/customListBoothName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="SampleText"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/customListBoothCapacityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customListBoothName"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="110dp"
                android:text="Capacity : 00"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/customListBoothFacilitiesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customListBoothCapacityTextView"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="110dp"
                android:text="Facilities : "
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>