<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PWD"
    android:background="#fff"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/layoutMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">
                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/pickup"
                    android:drawablePadding="10dp"/>
                <EditText
                    android:inputType="phone"
                    android:id="@+id/mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:hint="Enter Mobile Number"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/pickUpTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_up_time"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/pickup"
                    android:drawablePadding="10dp"/>
                <TimePicker
                    android:id="@+id/pickTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:hint="Enter PickUp Time"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPoint"
                android:gravity="center"
                android:layout_below="@+id/layoutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/pickUpPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_up_point"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingLeft="55dp"
                    android:paddingRight="55dp"
                    android:elevation="8dp"
                    android:drawableLeft="@drawable/ic_place_white_24dp"
                    android:drawablePadding="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:id="@+id/layoutPWDApp"
                android:gravity="center"
                android:layout_below="@+id/layoutPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/clickPWDApp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/click_on_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/pwdApp"
                    android:text="@string/open_pwd_app"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingLeft="55dp"
                    android:paddingRight="55dp"
                    android:elevation="8dp"
                    android:drawableRight="@drawable/send"
                    android:drawablePadding="8dp"/>

            </LinearLayout>
        </LinearLayout>
</ScrollView>